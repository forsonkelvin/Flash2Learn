<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCardActivity">

    <EditText
        android:id="@+id/user_option_2"
        android:layout_width="290dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="146dp"
        android:gravity="center"
        android:hint="Enter Another Option Here"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/user_option_1"
        android:layout_width="290dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:hint="Enter Option Here"
        android:inputType="textMultiLine" />

    <ImageView
        android:id="@+id/return_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="28dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_iconmonstr_x_mark_7" />

    <ImageView
        android:id="@+id/save_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/return_button"
        android:layout_marginStart="36dp"
        android:src="@drawable/ic_iconmonstr_download_2" />

    <EditText
        android:id="@+id/answer"
        android:layout_width="290dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="142dp"
        android:gravity="center"
        android:hint="Enter Answer Here"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/question"
        android:layout_width="290dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:gravity="center"
        android:hint="Enter Question Here"
        android:inputType="textMultiLine" />


</RelativeLayout>

