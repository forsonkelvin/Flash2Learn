<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_view"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/question_holder"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:background="@drawable/color_shape"
        android:elevation="5dp"
        android:gravity="center"
        android:text=" Capital city of Ghana?"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/answer_holder"
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        android:background="@drawable/answer_shape"
        android:gravity="center"
        android:text="Accra"
        android:textSize="30sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/Option_1"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190dp"
        android:layout_weight="1"
        android:background="@drawable/options_shape"
        android:gravity="center"
        android:text="Sunyani"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/Option_2"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="203dp"
        android:layout_weight="1"
        android:background="@drawable/options_shape"
        android:gravity="center"
        android:text="Accra"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/Option_3"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="106dp"
        android:layout_weight="1"
        android:background="@drawable/options_shape"
        android:gravity="center"
        android:text="Kumasi"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/toggle_icon_visibility"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_alignTop="@+id/plus_button"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:src="@drawable/ic_iconmonstr_eye_8" />

    <ImageView
        android:id="@+id/plus_button"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_iconmonstr_plus_circle_thin" />

    <ImageView
        android:id="@+id/edit_button"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/plus_button"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_iconmonstr_pencil_14" />

    <ImageView
        android:id="@+id/next_button"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="214dp"
        android:src="@drawable/ic_iconmonstr_arrow_25" />

    <ImageView
        android:id="@+id/delete_button"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/next_button"
        android:src="@drawable/ic_iconmonstr_trash_can_2" />

</RelativeLayout>